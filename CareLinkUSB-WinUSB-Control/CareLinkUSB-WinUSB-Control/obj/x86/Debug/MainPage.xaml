<Page x:ConnectionId='1'
    x:Class="CareLinkUSB_WinUSB_Control.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CareLinkUSB_WinUSB_Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                            >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
      <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Bytes sent:"/>
          <TextBlock x:ConnectionId='3' x:Name="BytesSent" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Bytes received:"/>
          <TextBlock x:ConnectionId='2' Width="800px" x:Name="BytesReceived" Margin="25,25,25,25"></TextBlock>
        </StackPanel>
      </StackPanel>
    </Grid>
</Page>

